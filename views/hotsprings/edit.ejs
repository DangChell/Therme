<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%=hotspring.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/hotsprings/<%=hotspring._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="hotspring[name]"
            value="<%=hotspring.name%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="hotspring[price]"
            value="<%hotspring.price%>"
            min="0.00"
            step="1.00"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="hotspring[image]"
            value="<%=hotspring.image%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="hotspring[description]"
            value="<%=hotspring.description%>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            Submit
          </button>
        </div>
      </form>
      <a href="/hotsprings">Back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %> <%- include("../partials/header") %>
